<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?attr/BackgroundColor"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.SplashActivity">
    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/car"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo"
                android:layout_width="170dp"
                android:layout_height="170dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car"
            android:textColor="?attr/BackgroundTint"
            android:layout_marginTop="10dp"
            android:text="@string/app_name"
            android:textStyle="bold" />


        <RelativeLayout
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:background="?attr/BackgroundTint"
            android:layout_below="@id/name"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text11"
                    android:textStyle="bold"
                    android:textSize="19dp"
                    android:textAlignment="center"
                    android:textColor="?attr/BackgroundColor"
                    android:text="Buy This App from Codecanyon only."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_below="@id/text11"
                    android:id="@+id/text22"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textSize="19dp"
                    android:textAlignment="center"
                    android:textColor="?attr/BackgroundColor"
                    android:text=" This app need purchase code."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_below="@id/text22"
                    android:id="@+id/text33"
                    android:layout_centerVertical="true"
                    android:textStyle="bold"
                    android:textSize="19dp"
                    android:textAlignment="center"
                    android:textColor="?attr/BackgroundColor"
                    android:text=" Nemosofts Owned the Copyright for This App."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>